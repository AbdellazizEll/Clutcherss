											<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">NomJoueur5</th>
											<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Email</th>
											<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Action</th>
										</tr>
									</thead>
									<tbody>
										{% if form is defined %}
											{% for inscription in inscriptions %}
												<tr>
													<td>
														<div class="d-flex px-2 py-1">

															<div class="d-flex flex-column justify-content-center">
																<h6 class="mb-0 text-sm">{{inscription.NomTournoi}}</h6>
															</div>
														</div>
													</td>
													<td>
														<div class="d-flex flex-column justify-content-center">
															<h6 class="mb-0 text-sm">{{inscription.NomComplet}}</h6>
														</td>
													</td>
													<td>
														<div class="d-flex flex-column justify-content-center">
															<h6 class="mb-0 text-sm">{{inscription.NomEquipe}}</h6>
														</td>
													</td>
													<td>
														<div class="d-flex flex-column justify-content-center">
															<h6 class="mb-0 text-sm">{{inscription.NombreJoueurs}}</h6>
														</td>
													</td>
													<td>
														<div class="d-flex flex-column justify-content-center">
															<h6 class="mb-0 text-sm">{{inscription.NomJoueur1}}</h6>
														</td>
													</td>
													<td>
														<div class="d-flex flex-column justify-content-center">
															<h6 class="mb-0 text-sm">{{inscription.NomJoueur2}}</h6>
														</td>
													</td>
													<td>
														<div class="d-flex flex-column justify-content-center">
															<h6 class="mb-0 text-sm">{{inscription.NomJoueur3}}</h6>
														</td>
													</td>
													<td>
														<div class="d-flex flex-column justify-content-center">
															<h6 class="mb-0 text-sm">{{inscription.NomJoueur4}}</h6>
														</td>
													</td>
													<td>
														<div class="d-flex flex-column justify-content-center">
															<h6 class="mb-0 text-sm">{{inscription.NomJoueur5}}</h6>
														</td>
													</td>
													<td>
														<div class="d-flex flex-column justify-content-center">
															<h6 class="mb-0 text-sm">{{inscription.email}}</h6>
														</td>
													</td>
													<td class="align-middle">
														<a href="{{path('modify_inscription', {'id': inscription.id})}}" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
															Edit
														</a>
														<a href="{{path('delete_inscription', {'id': inscription.id})}}" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
															Supp
														</a>
													</td>
												</tr>
											{% endfor %}

										</tbody>

									{% endif %}
								</table>
							</div>
						</div>
					</div>
				</div>


			</body>
