{% extends 'back/indexback.html.twig' %}
{% block title %}
	pubs
{% endblock %}


{% block body %}
	<body class="g-sidenav-show  bg-gray-200">

		<div class="container-fluid py-4">
			<div class="row">
				<div class="col-12">
					<div class="card my-4">
						<div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
							<div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
								<h6 class="text-white text-capitalize ps-3">Publicite Table</h6>
							</div>
						</div>
						<div class="card-body px-0 pb-2">
							<button class="btn bg-gradient-success " type="button" data-target="successToast">
								<a href="{{ path ('add_pub') }}">Ajouter Publicite</a>
							</button>
							<div class="table-responsive p-0">
								<table class="table align-items-center mb-0">
									<thead>
										<tr>
											<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">titre</th>
											<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">teaser</th>
											<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Image</th>
											<th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Action</th>
										</tr>
									</thead>
									<tbody>
										{% for pub in pubs %}
											<tr>
												<td>
													<div class="d-flex px-2 py-1">

														<div class="d-flex flex-column justify-content-center">
															<h6 class="mb-0 text-sm">{{pub.titre}}</h6>
														</div>
													</div>
												</td>
												<td>
													<div class="d-flex flex-column justify-content-center">
														<h6 class="mb-0 text-sm">{{pub.teaser}}</h6>
													</td>
												</td>
												<td>
													<div class="d-flex flex-column justify-content-center">
														<h6 class="mb-0 text-sm">{{pub.img}}</h6>
													</td>
												</td>
												<td class="align-middle">
													<a href="{{path('modify_pub', {'id': pub.id})}}" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
														Edit
													</a>
													<a href="{{path('delete_pub', {'id': pub.id})}}" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
														Supp
													</a>
												</td>
											</tr>
										{% endfor %}

									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>


			</body>
		{% endblock %}
		{% block footer %}
